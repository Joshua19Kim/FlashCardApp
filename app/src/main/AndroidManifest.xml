<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="nz.ac.canterbury.seng303.assg1.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/flashcard_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/flashcard_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab2"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true">
        <activity
            android:name="nz.ac.canterbury.seng303.assg1.MainActivity"
            android:exported="true"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lab2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>